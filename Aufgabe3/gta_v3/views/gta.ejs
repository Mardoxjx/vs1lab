	<!DOCTYPE html>

	<html lang="en">


	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>GeoTagApp</title>
		<link rel='stylesheet' href='./stylesheets/style.css'/>
	</head>

	<body>

	<header>
		<img src="./images/location.png" width="100"
			 alt="an image of a map and location"/>
		<h1>GeoTagApp</h1>
		<nav>
			<a href="#">About</a> | <a href="#">Help</a> | <a
					href="/">Home</a>
		</nav>
	</header>

	<main>
		<div class="flexbox">
			<div class="col-2">
				<div class="row1">
					<h2>Tagging</h2>

					<!-- ############### Aufgabe1a Form1 Strt -->
					<form id="tag-form" action="/tagging" method="POST">
						<fieldset>
							<legend>Enter new GeoTag:</legend>
							<label class="value">Latitude:</label>
							<input class="value" id="latitude" name="latitude" placeholder="latitude" required value=<%= latitude %>>
							<label class="value">Longitude:</label>
							<input class="value" id="longitude" name="longitude" placeholder="longitude" required value=<%= longitude %>>
							<label class="value">Name:</label>
							<input class="value" id="name" name="name" placeholder="name" pattern="[a-zA-ZäöüÄÖÜß]{1,10}" required value=<%= name %>>
							<label class="value">Hashtag:</label>
							<input class="value" id="hashtag" name="hashtag" placeholder="# + max. 10 letters" pattern="(#{1}[a-zA-ZäöüÄÖÜß]{1,10}){0,1}" required value=<%= hashtag %>>
							<button class="value" id="tagging-button">Submit</button>
                       </fieldset>
                   </form>
                   <!-- ############### Aufgabe1a Form1 Ende -->
				</div>
			</div>


			<div class="col-11">
				<div class="row2">
					<h2>Discovery</h2>

					<!-- ############### Aufgabe1a Form2 Start -->
					<form id="filter-form" action="/discovery" method="post">

						<fieldset>
							<legend>Filter by Searchterm:</legend>
							<input id="search-term" placeholder="search term">
							<input id="discoveryLatitude" value=""  hidden>
							<input id="discoveryLongitude" value="" hidden>
							<button id="search-term-button">Apply</button>
						</fieldset>
					</form>
				</div>

				<div class="row">
					<!-- ############### Aufgabe1a Form2 Ende -->

					<div class="col-5">
						<ul id="results">

							<% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
								<li><%= gtag.Name %> ( <%= gtag.Latitude %>,<%= gtag.Longitude %>) <%= gtag.Hashtag %> </li>
							<% }); %>

						</ul>
					</div>

					<div class="col-7">
						<img class="img" id="result-img" src="./images/mapview.jpg" alt="a map with locations" data-tags=<%= JSON.stringify(taglist)%>/>
						<div class="caption">Result map</div>
					</div>
				</div>
			</div>
		</div>

	</main>

	<footer>
		<span>2017 by LKIT</span>
	</footer>
	<!-- Load JavaScripts
    ================================================== -->
	<!-- Placed at the end of the document so the pages load faster -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
	<script src="./javascripts/geotagging.js"></script>

	</body>
	</html>
